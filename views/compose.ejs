<form class="form-group" action="/compose" method="post">
    <h1>Compose</h1>
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title">
    </div>
    <div class="form-group">
        <label for="newCompose">Post</label>
        <textarea class="form-control" name="newCompose" cols="30" rows="4"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button" onclick="">Publish</button>
</form>

